{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "riversim debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/source/riversim",
            "args": ["-o", "otest", "--save-each-step", "--height", "50"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "riversim debug(in builds)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/users/ofcra/builds/riversim/source/riversim",
            "args": ["-o", "otest", "--save-each-step", "--height", "50"],
            "stopAtEntry": false,
            "cwd": "/mnt/c/users/ofcra/builds/riversim/",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}